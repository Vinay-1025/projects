<!DOCTYPE html>
<html>

<head>
    <title>
        STUDENT_DETAILS
    </title>
    <link rel="stylesheet" type="text/css" href="/css/leaveD.css">
</head>

<body>
    <hr color="black"><center><h1>DETAILS</h1></center><hr color="black"/>
    <div class="main">
        <div class="right">
            <div class="cards-container">
                <% for(i of leave){ %>
                    <div class="card-container">
                        <div class="card">
                            <div class="front">
                                <div class="sub">
                                    <%- i.userName %>  <%= i.userId %>
                                </div>
                                <div class="data">
                                    <%= i.reason %> <br>
                                    <%= (i.inDate - i.outDate)/(24*3600*1000)%> days
    
                                </div>
                            </div>
                            <div class="back">
                                <div class="sub">
                                    STATUS
                                </div>
                                <div class="data">
                                    THE PRESENT STATUS IS  <span><%= i.approved %></span>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
                
            </div>
            
        </div>
        <div class="left">
            <div class="flex-wrapper">
                <div class="single-chart">
                    <svg viewBox="0 0 36 36" class="circular-chart orange">
                        <path class="circle-bg" d="M18 2.0845
                            a 15.9155 15.9155 0 0 1 0 31.831
                            a 15.9155 15.9155 0 0 1 0 -31.831" />
                        <path class="circle" stroke-dasharray="25, 100" d="M18 2.0845
                            a 15.9155 15.9155 0 0 1 0 31.831
                            a 15.9155 15.9155 0 0 1 0 -31.831" />
                        <text x="18" y="20.35" class="percentage"></text>
                    </svg>
                </div>

                <div class="single-chart">
                    <svg viewBox="0 0 36 36" class="circular-chart green">
                        <path class="circle-bg" d="M18 2.0845
                            a 15.9155 15.9155 0 0 1 0 31.831
                            a 15.9155 15.9155 0 0 1 0 -31.831" />
                        <path class="circle" stroke-dasharray="50, 100" d="M18 2.0845
                            a 15.9155 15.9155 0 0 1 0 31.831
                            a 15.9155 15.9155 0 0 1 0 -31.831" />
                        <text x="18" y="20.35" class="percentage"></text>
                    </svg>
                </div>
                <div class="single-chart">
                    <svg viewBox="0 0 36 36" class="circular-chart blue">
                        <path class="circle-bg" d="M18 2.0845
                            a 15.9155 15.9155 0 0 1 0 31.831
                            a 15.9155 15.9155 0 0 1 0 -31.831" />
                        <path class="circle" stroke-dasharray="75, 100" d="M18 2.0845
                            a 15.9155 15.9155 0 0 1 0 31.831
                            a 15.9155 15.9155 0 0 1 0 -31.831" />
                        <text x="18" y="20.35" class="percentage">%</text>
                    </svg>
                </div>

                <div class="single-chart">
                    <svg viewBox="0 0 36 36" class="circular-chart blue">
                        <path class="circle-bg" d="M18 2.0845
                            a 15.9155 15.9155 0 0 1 0 31.831
                            a 15.9155 15.9155 0 0 1 0 -31.831" />
                        <path class="circle" stroke-dasharray="100, 100" d="M18 2.0845
                            a 15.9155 15.9155 0 0 1 0 31.831
                            a 15.9155 15.9155 0 0 1 0 -31.831" />
                        <text x="18" y="20.35" class="percentage">%</text>
                    </svg>
                </div>
            </div>
        </div>
    </div>
</body>

</html>